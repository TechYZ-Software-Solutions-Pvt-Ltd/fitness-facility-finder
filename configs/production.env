# Production Environment Configuration
# For production testing and deployment

# Application Environment
NODE_ENV=production
FASTAPI_ENV=production
REACT_APP_ENV=production

# API Configuration
REACT_APP_API_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///./data/facility_finder_production.db

# Authentication
JWT_SECRET_KEY=your-production-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Google Places API
GOOGLE_PLACES_API_KEY=your-production-api-key

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://techyz-software-solutions-pvt-ltd.github.io

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# Features
ENABLE_LEADS_MANAGEMENT=true
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true

# Production Settings
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_METRICS=true
