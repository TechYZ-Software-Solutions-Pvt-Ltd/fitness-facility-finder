# Production Environment Configuration
# For production testing and deployment

# Application Environment
NODE_ENV=production
FASTAPI_ENV=production
REACT_APP_ENV=production

# API Configuration
REACT_APP_API_URL=https://your-render-backend.onrender.com
API_BASE_URL=https://your-render-backend.onrender.com

# Database
DATABASE_URL=sqlite:///./data/facility_finder_production.db

# Authentication
JWT_SECRET_KEY=your-production-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Google Places API
GOOGLE_PLACES_API_KEY=your-production-api-key

# CORS Settings
CORS_ORIGINS=https://techyz-software-solutions-pvt-ltd.github.io

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# Features
ENABLE_LEADS_MANAGEMENT=false
ENABLE_DEBUG_MODE=false
ENABLE_HOT_RELOAD=false

# Production Settings
ENABLE_API_DOCS=false
ENABLE_SWAGGER_UI=false
ENABLE_METRICS=true
